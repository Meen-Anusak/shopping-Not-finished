<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
    <title>Sign Up</title>
</head>

<body style="background-color: #eee;">
    <%- include('../layout.ejs')%>
    <div class="wrapper">
        <form action="/users/register" method="post">
            <div class="form-signup">
                <h2 style="font-weight: bold;" class="text-center text-default">Register</h2>
                <%if(locals.errors){%>
                <ul class="alert alert-danger">
                    <%Object.values(errors).forEach(function(err){%>
                    <li>
                        <%= err.msg%>
                    </li>
                    <%})%>
                </ul>
                <%}%>
               
                <div class="form-group mt-4">
                    <label class="text-default" for="">username : </label>
                    <input type="text" name="username" class="form-control">
                </div>
                <div class="form-group">
                    <label class="text-default" for="">Password : </label>
                    <input type="password" name="password" class="form-control" placeholder="password 8 > 20 charset">
                </div>
                <div class="form-group">
                    <label class="text-default" for="">Email : </label>
                    <input type="email" name="email" class="form-control">
                </div>
                <div class="form-group">
                    <label class="text-default" for="">Birthday : </label>
                    <input type="date" name="birthday" class="form-control">
                </div>
                <div class="form-group">
                    <label class="text-default" for="">Gender : </label>
                    <select name="gender" id="" class="form-control">
                        <option value=""></option>
                        <option value="male">male</option>
                        <option value="female">female</option>
                    </select>
                </div>
                <input type="text" name="type" value="user" hidden>
                <div class="text-center">
                    <button class="btn btn-primary"><i class="fas fa-user-plus"></i> Sign Up</button>
                </div>
            </div>
        </form>
    </div>

    <%-include('../footer.ejs')%>
</body>

</html>